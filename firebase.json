{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ],
    "source": "functions"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  },
  "emulators": {
    "functions": {
      "host": "0.0.0.0",
      "port": 5001
    },
    "firestore": {
      "host": "0.0.0.0",
      "port": 8080
    },
    "ui": {
      "enabled": true
    },
    "auth": {
      "host": "0.0.0.0",
      "port": 9099
    },
    "hosting": {
      "port": 5000,
      "host": "0.0.0.0"
    }
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": [
    {
      "target": "prod-app",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*"
      ]
    },
    {
      "target": "dev-app",
      "public": "build/web",
      "ignore": [
        "firebase.json",
        "**/.*"
      ]
    }
  ]
}