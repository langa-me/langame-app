rules_version = '2';
service cloud.firestore {
    match /databases/{database}/documents {
        match /users/{userId} {
            allow read: if request.auth != null;
        }
        match /notifications/{notificationId} {
            // Only allow self notification access
            allow read: if request.auth != null && request.auth.uid in resource.data.recipientsUid;
        }
        match /langames/{langameId} {
            // Only allow access to invited Langames
            // allow read: if request.auth != null && request.auth.uid in resource.data.players;
            allow read: if request.auth != null;
        }
    }
}

