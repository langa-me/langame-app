{
  "name": "@langa-me/functions",
  "description": "Firebase & co",
  "scripts": {
    "clean": "rm -rf lib/ node_modules/ package-lock.json",
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "build-prod": "tsc -p tsconfig-build.json",
    "proto": "tsc -p . && cp -r src/langame lib/",
    "start": "tsc --watch | firebase emulators:start --only auth,firestore,functions",
    "deploy": "firebase deploy",
    "deploy-ff": "firebase deploy --only functions,firestore",
    "deploy-rules": "firebase deploy --only firestore:rules",
    "deploy-indexes": "firebase deploy --only firestore:indexes",
    "deploy-remoteconfig": "firebase deploy --only remoteconfig",
    "logs": "firebase functions:log",
    "set-dev": "gcloud config set project langame-dev && firebase use langame-dev && cp ../web/web_flavors/development/* ../web",
    "set-prod": "gcloud config set project langame-86ac4 && firebase use langame-86ac4 && cp ../web/web_flavors/production/* ../web",
    "compile": "npm run build -- --declaration --watch",
    "test": "firebase emulators:exec --only firestore \"mocha --timeout 50000 --exit -g '^(Utils|Completion1|Firestore rules)'\"",
    "release": "npx ts-node src/scripts/newRelease.ts"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "types": "lib/langame/protobuf/langame.d.ts",
  "dependencies": {
    "@google-cloud/logging": "^9.2.3",
    "@google-cloud/translate": "^6.3.0",
    "@octokit/rest": "^18.5.2",
    "@sentry/node": "^6.10.0",
    "@sentry/tracing": "^6.10.0",
    "algoliasearch": "^4.10.3",
    "async-wait-until": "^2.0.8",
    "cron-parser": "^4.2.1",
    "faker": "^5.5.3",
    "firebase-admin": "^10.0.1",
    "firebase-functions": "^3.15.3",
    "firebase-functions-rate-limiter": "^3.8.3",
    "node-fetch": "^2.6.1",
    "semver": "^7.3.5",
    "string-similarity": "^4.0.4",
    "stripe": "^8.148.0",
    "twitter-api-v2": "^1.4.0",
    "unique-names-generator": "^4.6.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.1",
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.10",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.0.11",
    "@types/sinon": "^10.0.4",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chai": "^4.3.4",
    "codecov": "^3.8.2",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.3.3",
    "firebase-tools": "^10.0.1",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "portfinder": "^1.0.28",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "private": true
}
