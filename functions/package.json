{
  "name": "functions",
  "description": "Firebase & co",
  "scripts": {
    "clean": "rm -rf lib/ node_modules/ package-lock.json",
    "lint": "eslint --ext .ts .",
    "build": "tsc",
    "start": "npm run build -- --watch | firebase emulators:start",
    "deploy": "firebase deploy",
    "deploy-ff": "firebase deploy --only functions,firestore",
    "deploy-rules": "firebase deploy --only firestore:rules",
    "deploy-indexes": "firebase deploy --only firestore:indexes",
    "deploy-remoteconfig": "firebase deploy --only remoteconfig",
    "logs": "firebase functions:log",
    "set-dev": "firebase use langame-dev",
    "set-prod": "firebase use langame-86ac4",
    "compile": "npm run build -- --declaration --watch",
    "test": "mocha -g Utils --timeout 50000"
  },
  "engines": {
    "node": "14"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@google-cloud/logging": "^9.2.3",
    "@google-cloud/translate": "^6.3.0",
    "@octokit/rest": "^18.5.2",
    "@sentry/node": "^6.10.0",
    "@sentry/tracing": "^6.10.0",
    "agora-access-token": "^2.0.1",
    "algoliasearch": "^4.10.3",
    "faker": "^5.5.3",
    "firebase-admin": "^9.9.0",
    "firebase-functions": "^3.15.3",
    "firebase-functions-rate-limiter": "^3.8.3",
    "mailchimp-api-v3": "^1.15.0",
    "node-fetch": "^2.6.1",
    "semver": "^7.3.5",
    "string-similarity": "^4.0.4",
    "stripe": "^8.148.0",
    "twitter-api-v2": "^1.4.0"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^1.3.8",
    "@types/chai": "^4.2.18",
    "@types/cors": "^2.8.10",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.0.11",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "chai": "^4.3.4",
    "codecov": "^3.8.2",
    "eslint": "^7.6.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.22.0",
    "firebase-functions-test": "^0.3.1",
    "firebase-tools": "^9.11.0",
    "mocha": "^8.4.0",
    "nyc": "^15.1.0",
    "portfinder": "^1.0.28",
    "sinon": "^10.0.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "private": true
}
